<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SendSmsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/general_content"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/et_bg"
            android:ems="10"
            android:gravity="top"
            android:hint="@string/teacher_txt_typemsg"
            android:inputType="textMultiLine"
            android:maxLines="15"
            android:minLines="7"
            android:padding="7dp"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/genText_txtmessage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/et_bg"
            android:ems="10"
            android:gravity="top"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:maxLines="15"
            android:minLines="7"
            android:padding="7dp"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/teacher_clr_card_grey"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/genText_msgcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/teacher_clr_black"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="0" />

            <TextView
                android:id="@+id/genText_countslash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="@color/teacher_clr_black"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="/" />

            <TextView
                android:id="@+id/genText_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="460"
                android:textColor="@color/teacher_clr_black"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/Send"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="SEND"
            android:layout_marginTop="5dp"
            android:textColor="@color/bpWhite"
            android:background="@drawable/button"
            android:layout_height="40dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>