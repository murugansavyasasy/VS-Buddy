<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="3dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/report_rectangle"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reference Id"
                android:textColor="@color/colorblack"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Refer_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="dfsdfff"
                android:textColor="@color/colorblack"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="2dp"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Employee"
                android:textColor="@color/colorblack"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Employee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorblack"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="2dp"

            android:padding="4dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Month"
                android:textColor="@color/colorblack"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/monthclaim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="fdffff"
                android:textColor="@color/colorblack"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="2dp"

            android:padding="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Amount "
                android:textColor="@color/colorblack"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="gfgfgff"
                android:textColor="@color/colorblack"
                android:textSize="15dp" />


            <!--<ImageView-->
                <!--android:id="@+id/edit_img"-->
                <!--android:layout_width="30dp"-->
                <!--android:layout_height="28dp"-->
                <!--android:layout_marginRight="5dp"-->
                <!--android:src="@drawable/edit" />-->

            <!--<ImageView-->
                <!--android:id="@+id/delete_img"-->
                <!--android:layout_width="30dp"-->
                <!--android:layout_height="28dp"-->
                <!--android:src="@drawable/delete"-->
                <!--android:textStyle="normal" />-->


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="2dp"

            android:padding="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Description"
                android:textColor="@color/colorblack"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorblack"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="2dp"
            android:padding="4dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Status"
                android:textColor="@color/colorblack"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorblack"
                android:textSize="15dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/Approved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorblack"
            android:textSize="15dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/idlocalexpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="idlocal"
            android:layout_weight="1"
            android:textColor="@color/colorblack"
            android:textSize="15dp"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">


            <Button
                android:id="@+id/btn_Edit"
                android:layout_width="80dp"
                android:layout_height="39dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/rectanglebox"
                android:backgroundTint="@color/colorApprove"
                android:text="Edit"
                android:textColor="@color/colorWhite"
                android:textSize="15dp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="80dp"
                android:layout_height="39dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/rectanglebox"
                android:backgroundTint="@color/colorlightred"
                android:text="Delete"
                android:textColor="@color/colorWhite"
                android:textSize="15dp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btn_Details"
                android:layout_width="80dp"
                android:layout_height="39dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/rectanglebox"
                android:backgroundTint="@color/colorDetails"
                android:text="Details"
                android:textColor="@color/colorWhite"
                android:textSize="15dp"
                android:textStyle="normal" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
