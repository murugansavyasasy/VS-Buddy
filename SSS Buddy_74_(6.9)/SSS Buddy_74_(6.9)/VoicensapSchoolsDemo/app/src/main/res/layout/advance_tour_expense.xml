		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<Button
				android:layout_width="wrap_content"
				android:id="@+id/btn_move"
				android:text="move to tour settlement"
				android:layout_alignParentLeft="true"
				android:textColor="@color/colorWhite"
				android:visibility="visible"
				android:clickable="true"
				android:layout_margin="3dp"
				android:padding="3dp"
				android:background="@drawable/rectanglebox"
				android:backgroundTint="@color/colorApprove"
				android:layout_height="30dp"/>
			<Button
				android:layout_width="wrap_content"
				android:id="@+id/btn_edit"
				android:text="edit"
				android:layout_alignParentLeft="true"
				android:textColor="@color/colorWhite"
				android:layout_marginLeft="30dp"
				android:visibility="visible"
				android:clickable="true"
				android:layout_margin="3dp"
				android:padding="2dp"
				android:background="@drawable/rectanglebox"
				android:backgroundTint="@color/colorApprove"
				android:layout_height="30dp"/>
			<Button
				android:layout_width="wrap_content"
				android:id="@+id/btn_delete"
				android:text="delete"
				android:layout_centerInParent="true"
				android:textColor="@color/colorWhite"
				android:layout_centerHorizontal="true"
				android:layout_margin="3dp"
				android:visibility="visible"
				android:clickable="true"
				android:padding="2dp"
				android:background="@drawable/rectanglebox"
				android:backgroundTint="@color/colorlightred"
				android:layout_height="30dp"/>
			<Button
				android:layout_width="wrap_content"
				android:id="@+id/btn_details"
				android:text="details"
				android:textStyle="bold"
				android:padding="2dp"
				android:visibility="visible"
				android:clickable="true"
				android:background="@drawable/rectanglebox"
				android:backgroundTint="@color/colorDetails"
				android:layout_margin="3dp"
				android:textColor="@color/colorWhite"
				android:layout_alignParentRight="true"
				android:layout_height="30dp"/>

		</RelativeLayout>
	</LinearLayout>


