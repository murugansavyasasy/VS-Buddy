<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:background="#F5FAFA"
    tools:context=".Activities.Zero_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <EditText
            android:id="@+id/txtSearch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/et_bg"
            android:hint="Search"
            android:inputType="text"
            android:maxLines="1"
            android:padding="5dp" />

        <LinearLayout
            android:id="@+id/lnr1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/rb_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/img_all"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="4dp"
                    android:checked="true"
                    android:text="All"
                    android:textColor="@color/clr_red1"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_allcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:text="(120)"
                    android:textColor="@color/clr_black"
                    android:textSize="15dp"
                    android:visibility="gone">

                </TextView>

                <RadioButton
                    android:id="@+id/imgInactive"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:checked="false"
                    android:text="Live"
                    android:textColor="@color/clr_red1"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_livecount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:text="(120)"
                    android:textColor="@color/clr_black"
                    android:textSize="15dp"
                    android:visibility="gone">

                </TextView>

                <RadioButton
                    android:id="@+id/img_active"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:checked="false"
                    android:text="Poc"
                    android:textColor="@color/clr_red1"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_poccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:text="(120)"
                    android:textColor="@color/clr_black"
                    android:textSize="15dp"
                    android:visibility="gone">

                </TextView>
            </RadioGroup>
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcy_schoollist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:scrollbars="vertical">

        </androidx.recyclerview.widget.RecyclerView>


        <TextView
            android:id="@+id/txt_nodatafound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No data found"
            android:textSize="15dp"
            android:layout_marginTop="150dp"
            android:visibility="gone"
            android:textStyle="bold"
            android:textColor="@color/clr_black"
            android:layout_gravity="center"
            >

        </TextView>

    </LinearLayout>
</LinearLayout>