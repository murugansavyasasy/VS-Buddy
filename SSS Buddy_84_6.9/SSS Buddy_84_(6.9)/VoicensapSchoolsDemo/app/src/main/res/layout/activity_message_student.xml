<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_message_student"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:padding="16dp"
    tools:context="pkg.vs.schoolsdemo.voicensapschoolsdemo.Activity.Message_student">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/messageschool1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/bgheader"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBoxcheck1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/messageschool1"
                android:layout_marginTop="5dp"
                android:checked="true"
                android:text="Send Message For the Entire School"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linear21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkBoxcheck1"
                android:orientation="vertical"
                android:visibility="gone">


                <RadioGroup
                    android:id="@+id/radioGrouptype1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.02"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radiostd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="20dp"
                        android:text="Standard"
                        android:textColor="@color/background1" />


                    <RadioButton
                        android:id="@+id/radiogrp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="Group"
                        android:textColor="@color/background1" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llstdgrp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearstd1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear21"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Standards"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <pkg.vs.schoolsdemo.voicensapschoolsdemo.DataClass.MultiSelectionSpinner
                        android:id="@+id/mySpinnerstd"
                        style="@style/spinner_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lineargrp1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearstd1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Groups"
                        android:textSize="15dp"
                        android:textStyle="bold" />


                    <pkg.vs.schoolsdemo.voicensapschoolsdemo.DataClass.MultiSelectionSpinner1
                        android:id="@+id/mySpinnergrp"
                        style="@style/spinner_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="369dp"
                android:layout_above="@+id/btnsend"
                android:layout_below="@+id/lineargrp1">


                <EditText
                    android:id="@+id/edittextmsg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/border"
                    android:gravity="top|left"
                    android:hint="Enter the Message"
                    android:maxLines="50"
                    android:minLines="6"
                    android:padding="10dp"
                    android:scrollbars="vertical" />
            </LinearLayout>


            <Button
                android:id="@+id/btnsend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button"
                android:gravity="center"
                android:text="SEND MESSAGE"
                android:textColor="@color/bgwhite"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>