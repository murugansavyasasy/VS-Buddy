<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@drawable/rect_popup_white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgClose"
            android:layout_margin="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:src="@drawable/img_close" />

        <TextView
            android:id="@+id/lblTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="10dp"
            android:text="Fingerprint Authentication"
            android:textColor="@color/clr_yellow"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lblHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="2dp"
            android:text=""
            android:textColor="@color/clr_black"
            android:textSize="15dp"
            android:visibility="visible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/biometric_security" />


        <TextView
            android:id="@+id/lblAuthenticate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Please allow School Chimes to make use of your fingerprint authentication to enable seamless attendance registration."
            android:textColor="@color/clr_black"

            android:background="@drawable/bg_rect_light_grey"
            android:textSize="15dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/btnAllow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgMarkAttendance"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/bg_rect_yellow"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="Yes. Enable seamless attendance"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:visibility="visible" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:id="@+id/btnSkip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgMarkAttendance"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/bg_rect_location"
            android:padding="10dp"
            android:text="No. I'll continue with the conventional method"
            android:textAlignment="center"
            android:textColor="@color/clr_black"
            android:visibility="visible" />


    </LinearLayout>
</RelativeLayout>

