<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background2"
            android:orientation="vertical"
            android:padding="10dp">



            <!--MemberName,AppPassword,MemberType,Designation,IVRPassword;-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Member Name"
                    android:textSize="15dp"
                    android:textColor="@color/background1"
                    android:layout_weight="0.4"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/snrmgt_membername"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/background1"
                    android:layout_weight="0.6"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Mobile number"
                    android:textSize="15dp"
                    android:textColor="@color/background1"
                    android:layout_weight="0.4"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/snrmgt_mobno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/background1"
                    android:layout_weight="0.6"
                    android:textSize="15dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="App Password"
                    android:textSize="15dp"
                    android:textColor="@color/background1"
                    android:layout_weight="0.4"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/snrmgt_apppassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/background1"
                    android:layout_weight="0.6"
                    android:textSize="15dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Member Type"
                    android:textSize="15dp"
                    android:textColor="@color/background1"
                    android:layout_weight="0.4"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/snrmgt_membertype"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/background1"
                    android:layout_weight="0.6"
                    android:textSize="15dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Designation"
                    android:textSize="15dp"
                    android:textColor="@color/background1"
                    android:layout_weight="0.4"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/snrmgt_designation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/background1"
                    android:layout_weight="0.6"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="IVR Password"
                    android:textSize="15dp"
                    android:textColor="@color/background1"
                    android:layout_weight="0.4"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/snrmgt_ivrpassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/background1"
                    android:layout_weight="0.6"
                    android:textSize="15dp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>